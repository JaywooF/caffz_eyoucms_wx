/* wxParse.wxss */
@import "/wxParse/wxParse.wxss";

page {
  background-color: #f7f7f7;
  padding-bottom: 100rpx;
}

/* 顶部选项卡 */

.header {
  display: flex;
  /* position: fixed; */
  top: 0;
  width: 100%;
  height: 88rpx;
  color: #333;
  font-size: 28rpx;
  background: #fff;
  border-bottom: 1rpx solid #e4e4e4;
  z-index: 100;
  /* overflow: hidden; */
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.header .cs {
  display: inline-block;
  padding: 0 20rpx;
  text-align: center;
  height: 84rpx;
  line-height: 84rpx;
  box-sizing: border-box;
}

.header .cs text {
  display: block;
  height: 100%;
}

.header .cs.active text {
  color: #ff8200;
  border-bottom: 2px solid #ff8200;
}


/*文档详情*/
.block-proList{
  /* margin-top: 108rpx; */
